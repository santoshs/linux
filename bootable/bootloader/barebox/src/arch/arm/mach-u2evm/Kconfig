if ARCH_U2EVM

config ARCH_TEXT_BASE
	hex
	default 0x43000000

config MACH_U2EVM
	bool "U2 EVM board"
	default y
	select MACH_HAS_LOWLEVEL_INIT
	help
	  This adds generic code to configure the CPG, GPIO, SDRAM, etc after reset.
	
config BOARDINFO
	default "Renesas U2EVM"

config U2EVM_SECURITY
	bool "U2 EVM Security"
	
config U2EVM_SECURITY_IMG_ADDRS
	depends on U2EVM_SECURITY
	prompt "Image address"
	hex
	default 0x4E000800
	
source arch/arm/boards/u2evm/Kconfig 

endif
