# ths.mk

#----------------------------------------------------------------
# target
#----------------------------------------------------------------
TARGET	= ths
ULIB	= $(TARGET).a

#----------------------------------------------------------------
# include and symbol path
#----------------------------------------------------------------
INC0	= ../src
INC1	= ../../../inc
INC		= -I$(INC0) -I$(INC1)
SRC     = ../src
VPATH	= $(INC0):$(INC1):$(SRC)

#----------------------------------------------------------------
# option
#----------------------------------------------------------------
VIA_DIR	= ../../../via
OPT		= $(VIA_DIR)/loader_opt.mk

include $(OPT)
#----------------------------------------------------------------
# object
#----------------------------------------------------------------
OBJS        = ths_api.o

LIBSDIR     = ../../libs
SEC_LIBSDIR = ../../../securelib/lib

LIBS        = $(LIBSDIR)/i2c.a  		   \
              $(LIBSDIR)/std.a             \
              $(LIBSDIR)/common.a          \
              $(LIBSDIR)/tmu.a             \
              $(LIBSDIR)/serial.a
              


.PHONY : allclean clean all
all: $(ULIB)
#----------------------------------------------------------------
# dependence
#----------------------------------------------------------------
$(OBJS)           :$(TARGET).mk $(OPT)
ths_api.o         : ths_api.h common.h i2c.h string.h log_output.h


#----------------------------------------------------------------
# LINK START
#----------------------------------------------------------------

include $(VIA_DIR)/loader_lib.mk
